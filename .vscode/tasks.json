                "${workspaceFolder}\\TicTacToe\\TicTacApp\\main.cpp",
                "${workspaceFolder}\\TicTacToe\\TicTacLib\\src\\board.cpp",
                "${workspaceFolder}\\TicTacToe\\TicTacLib\\src\\console.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\TicTacToe\\TicTacApp"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build TicTacToe app with library"
        }
    ],
